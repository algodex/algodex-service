{
  "name": "@algodex/service",
  "version": "1.0.1",
  "description": "Algodex Services",
  "license": "UNLICENSED",
  "author": "Michael Feher",
  "repository": {
    "type": "git",
    "url": "https://github.com/algodex/algodex-service.git"
  },
  "type": "module",
  "bin": {
    "dex-service": "./server.js"
  },
  "scripts": {
    "dev": "dex watch",
    "prepare": "husky install",
    "test": "dex test",
    "test-lint": "eslint lib/*.js server.js --fix",
    "test-unit": "jest",
    "docs": "esdoc",
    "wa-frontend": "snowpack dev",
    "wa-test": "cross-env CI=true jest --watch",
    "watch-broker": "cross-env APP_CONTEXT=broker nodemon server.js",
    "watch-service": "nodemon server.js",
    "watch-views": "nodemon --watch views --exec \"dex push\"",
    "watch-worker": "cross-env APP_CONTEXT=worker nodemon server.js"
  },
  "dependencies": {
    "@algodex/common": "0.0.0-development",
    "@sentry/node": "^6.13.3",
    "@sentry/tracing": "^6.13.3",
    "algosdk": "^1.12.0",
    "bull": "^4.0.0",
    "bullmq": "^1.50.5",
    "commander": "^8.2.0",
    "pino-sentry": "^0.9.0",
    "ws": "^8.2.3"
  },
  "devDependencies": {
    "@algodex/cli": "^0.0.0-development",
    "atob": "^2.1.2",
    "btoa": "^1.2.1",
    "dotenv": "^10.0.0",
    "esdoc": "^1.1.0",
    "esdoc-coverage-plugin": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-publish-markdown-plugin": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^8.0.1",
    "eslint-config-google": "^0.14.0",
    "husky": "^7.0.2",
    "ioredis-mock": "^5.6.0",
    "jest": "^27.2.5",
    "nodemon": "^2.0.13",
    "pino-pretty": "^7.1.0",
    "snowpack": "^3.8.8"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "esdoc": {
    "source": "lib",
    "destination": "docs",
    "plugins": [
      {
        "name": "esdoc-ecmascript-proposal-plugin",
        "option": {
          "all": true
        }
      },
      {
        "name": "esdoc-standard-plugin",
        "option": {
          "test": {
            "source": "__tests__",
            "interfaces": [
              "describe",
              "it",
              "context",
              "suite",
              "test"
            ],
            "includes": [
              "\\.js$"
            ]
          }
        }
      },
      {
        "name": "esdoc-coverage-plugin"
      },
      {
        "name": "esdoc-publish-markdown-plugin",
        "option": {
          "filename": "Package.md"
        }
      }
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": 13,
      "sourceType": "module"
    },
    "rules": {}
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/.wiki/**",
      "!**/.husky/**",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "semantic-release-gitmoji",
        {
          "releaseRules": {
            "major": [
              ":boom:",
              "üí•"
            ],
            "minor": [
              ":sparkles:",
              "‚ú®"
            ],
            "patch": [
              ":bug:",
              ":ambulance:",
              ":lock:",
              "üêõ",
              "üöë",
              "üîí"
            ]
          },
          "releaseNotes": {
            "issueResolution": {
              "template": "{baseUrl}/{owner}/{repo}/issues/{ref}",
              "baseUrl": "https://github.com",
              "source": "github.com"
            }
          }
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "üîñ ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
